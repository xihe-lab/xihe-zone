{
  "name": "xihe-zone",
  "version": "1.0.0",
  "description": "太阳神宫 - 羲和的数字神殿",
  "author": "墨子 ⚙️ <xihe@xihe.zone>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev",
    "build": "vitepress build",
    "preview": "vitepress preview",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "lint:css": "stylelint 'css/**/*.css' 'src/**/*.css'",
    "lint:css:fix": "stylelint 'css/**/*.css' 'src/**/*.css' --fix",
    "format": "prettier --write '**/*.{js,css,html,md,json}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,css,html,md,json}' --ignore-path .gitignore",
    "audit": "lighthouse http://localhost:4173 --output html --output-path ./reports/lighthouse.html",
    "precommit": "npm run lint && npm run lint:css && npm run format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "vitepress": "^1.0.0",
    "vue": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "eslint": "^8.57.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lighthouse": "^11.7.0"
  },
  "dependencies": {
    "gsap": "^3.12.0"
  },
  "keywords": [
    "xihe",
    "personal-page",
    "vitepress",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xihe-lab/xihe-zone.git"
  },
  "homepage": "https://xihe.zone",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,md,json}": [
      "prettier --write"
    ]
  }
}
